    <!-- ==================== TOP SHELF: Bowls/Cups ==================== -->
    <include>
      <uri>model://bowl</uri>
      <name>bowl_1</name>
      <pose>0.75 -0.2 0.93 0 0 0</pose>
    </include>

    <include>
      <uri>model://plastic_cup</uri>
      <name>cup_1</name>
      <pose>0.75 0 0.92 0 0 0</pose>
